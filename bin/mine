#!/usr/bin/env node
const CLApp = require('app-term-kit');
const div = require('../divisive.js');
const fs = require('fs');


let app = new CLApp('mine', {
    copyright : 'Abbey Hawk Sparrow',
    copystart : '2022',
    defaults : `{
  // This file was autogenerated by mine
  //
  "debug": false
}`
});

app.command({
    name : 'scrape',
    description: 'parse a given CSV into JSON',
    examples : [
        [
            '$0 scrape definition.auto.xml',
            'parse all rows/columns from the file `datafile.csv`'
        ]
    ],
    action : function(argv, target, complete){
        console.log(argv, target, complete);
    }
});

app.argument('filter', 'string', 'MongoQueryDocument filter for results', 1);
app.argument('data', 'string', 'JSON document to scrape with', 1);

app.header();
app.footer();
app.help();
app.run((err)=>{
    if(err) console.log(err);
});
